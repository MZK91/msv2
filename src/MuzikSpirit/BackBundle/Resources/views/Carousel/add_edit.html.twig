{% extends'MuzikSpiritBackBundle:Partial:content.html.twig' %}
{% block title %}{{ global_website }} | Admin | {{ titre | title }}{% endblock %}
{% block menu_navigation %}{{ include('MuzikSpiritBackBundle:Partial:top_navigation.html.twig', { 'action': path('muzikspirit_back_carousel_searchforward') , 'find' : find | default('') }) }}{% endblock %}
{% block contentwrap %}
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">{{ titre }}</span>
        </div>
        <div class="panel-body">

            {{ form_start(form) }}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="titre">Titre</label>
                <div class="col-sm-10">
                    {{ form_widget(form.titre, {'id': 'titre'}) }}
                    {{ form_errors(form.titre) }}
                </div>
            </div>
            {{ form_row(form.description, {'id': 'description'}) }}
            {{ form_row(form.lien, {'id': 'lien'}) }}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="artiste">Image</label>
                <div class="col-sm-7">
                    {{ form_widget(form.id_image, {'id': 'id_image'}) }}
                    {{ form_errors(form.id_image) }}
                    <input type="hidden" id="image"/>
                </div>
                <div class="col-sm-3">
                    <a role="button" class="btn btn-large btn-primary images_button" data-toggle="modal" class="images_button"
                       link="{{ path('muzikspirit_back_image_list',{page:1,iframe:1,type:3}) }}?action=image"><i class="fa fa-picture-o"></i>&nbsp; Image</a>
                    <a role="button" id="google-find" data-value="titre" class="btn btn-large btn-primary"><i class="fa fa-search"></i>&nbsp;Google</a>

                </div>

            </div>
            {{ form_row(form.section, {'id': 'section'}) }}
            {{ form_row(form.typeArticle, {'id': 'type_article'}) }}

            {{ form_widget(form.envoyer) }}
            {{ form_widget(form._token) }}
            {{ form_end(form,{'render_rest' : false}) }}
            </div>
        </div>
    </div>
    {% include('MuzikSpiritBackBundle:Partial:_modal.html.twig') %}
{% endblock %}
{% block javascripts %}
    {{ include('MuzikSpiritBackBundle:Partial:_admin_javascript.html.twig') }}
    {{ include('MuzikSpiritBackBundle:Partial:_tinymce_javascript.html.twig') }}
    {{ include('MuzikSpiritBackBundle:Partial:_modal_javascript.html.twig') }}
{% endblock %}