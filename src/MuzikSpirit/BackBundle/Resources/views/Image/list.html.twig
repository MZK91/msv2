{% extends'MuzikSpiritBackBundle:Partial:content.html.twig' %}
{% block menu_navigation %}{{ include('MuzikSpiritBackBundle:Partial:top_navigation.html.twig', { 'action': path('muzikspirit_back_image_searchforward') , 'find' : find | default('') }) }}{% endblock %}
{% block title %}{{ global_website }} | Admin | {{ titre | title }}{% endblock %}
{% block contentwrap %}
    <!-- Javascript -->
    <script>
        init.push(function () {
            $('#jq-datatables-example').dataTable();
            $('#jq-datatables-example_wrapper .table-caption').text('Liste des {{ titre | default('') }} : ({{ pagination.getTotalItemCount }})');
            $('#jq-datatables-example_wrapper .dataTables_filter input').attr('placeholder', 'Rechercher...');
        });
    </script>
    <!-- / Javascript -->
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">{{ titre }}</span>
            <div class="panel-heading-controls">
                <button class="btn btn-labeled btn-primary"><a href="{{ path('muzikspirit_back_image_add') }}"><span class="btn-label icon fa fa-file-text-o"></span>Ajout</a></button>
            </div>
        </div>

        <div class="panel-body">
            <div class="table-primary">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="jq-datatables-example">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>edit</th>
                        <th>supp</th>
                        <th>img</th>
                        <th>titre</th>
                        <th>type</th>
                        <th>date</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for image in pagination.items %}
                            <tr>
                                <td>{{ image.id }}</td>
                                <td align="center"><a href="{{ path('muzikspirit_back_image_edit',{'id':image.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td align="center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><i class="fa fa-times"></i></button>
                                        <ul class="dropdown-menu">
                                            <li></li>
                                            <li><a href="{{ path('muzikspirit_back_image_remove',{'id':image.id}) }}" onClick="return confirmLink(this)"><i class="fa fa-exclamation"></i>&nbsp;&nbsp;Confirmer la suppression</a></li>
                                        </ul>
                                    </div>
                                </td>
                                <td><a href="{{ asset(image.typeImage.path ~ image.image) }}" target="_blank"><img src="{{ asset(image.typeImage.path ~ image.image) }}" height="30" width="50" /></a></td>
                                <td>{{ image.titre }}</td>
                                <td>{{ image.typeImage.type }}</td>
                                <td>{{ image.date | date('d/m/y') }}</td>
                            </tr>
                        {% else %}
                            <div class="alert alert-dark">Aucun Article</div>
                        {% endfor %}
                    </tbody>
                </table>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ include('MuzikSpiritBackBundle:Partial:_datatables_javascript.html.twig',{'table_id':'jq-datatables-example'}) }}
{% endblock %}